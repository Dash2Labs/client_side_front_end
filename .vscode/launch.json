    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client Server",
            "program": "${workspaceFolder}/ClientServer/index.ts",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Python: Current File",
            "cwd": "${workspaceFolder}/Server",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "redis-server /etc/redis/6379.conf"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/ClientServer/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
        }
    ]
}