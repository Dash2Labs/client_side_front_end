{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "declarationMap": true,
        "declaration": true,
        "noEmit": false,
        "declarationDir": "../types",
        "lib": [
            "es2023"
        ],
        "composite": true,
        "outDir": "../dist",
        "rootDir": ".",
        "paths": {
            "@public/*": ["../public/*"],
            "@assets/*": ["./assets/*"],
            "@certs/*": ["./build/*"],
        }
    },
    "include": ["**/*.ts"]
}